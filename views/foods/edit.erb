<h2>Edit A Menu Item</h2>
<form action="/foods/<%= @food.id %>" method="POST">

	<label for="food_name">Name:</label>
	<input id="food_name" type="text" name='food[name]' value="<%= @food.name%>"><br>

	<label for="food_type">Cuisine Type:</label>
	<input id="food_type" type="text" name='food[cuisine_type]' value="<%= @food.cuisine_type%>" ><br>

	<label for="food_price">Price:</label>
	<input id="food_price"type="number" name='food[price]'value="<%= @food.price%>"><br>

	<label for="food_allergens">Allergens:</label>
	<input id="food_allergens"type="text" name='food[allergens]'value="<%= @food.allergens%>"><br>

	<input type="hidden" name="_method" value="patch">
	<input type="submit" value="Update!">
</form>


