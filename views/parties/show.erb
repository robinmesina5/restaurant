<h2 id="table">Table Number: <%= @party.table_id %></h2>
<h3 id="show">Party of: <%= @party.guests %></h3>
<h3 id="show">Party Name: <%= @party.party_name %></h3>
<h3 id="show">Server: <%= @employee.name %></h3>
<h3 id="show">Paid: 
	<% if @party.paid %>
	Yes
	<% else %>
	No
	<% end %>
</h3>
<h2>Orders:</h2>
<ul>
	<% @party.orders.map do |order| %>
	<li><%= order.food.name %>: &pound;<%= order.food.price %>.00
	</li>
	<% end %>
</ul>

